{#
/**
 * Flexible Container Component - Full gamut of layout options
 * @param {string} width - Width options (100%, 90%, 80%, 70%, 60%, 50%, 40%, 30%, 400px, 300px, etc.)
 * @param {string} height - Height options (auto, 100vh, 90vh, 80vh, 70vh, 60vh, 50vh, 400px, 300px, etc.)
 * @param {string} max_width - Max width (1200px, 1000px, 800px, 600px, 400px, 300px, none)
 * @param {string} margin_top - Top margin (0, 10px, 20px, 40px, 60px, 80px, 100px, 120px)
 * @param {string} margin_bottom - Bottom margin (0, 10px, 20px, 40px, 60px, 80px, 100px, 120px)
 * @param {string} margin_left - Left margin (0, 10px, 20px, 40px, 60px, 80px, 100px, auto)
 * @param {string} margin_right - Right margin (0, 10px, 20px, 40px, 60px, 80px, 100px, auto)
 * @param {string} padding_top - Top padding (0, 10px, 20px, 40px, 60px, 80px, 100px, 120px)
 * @param {string} padding_bottom - Bottom padding (0, 10px, 20px, 40px, 60px, 80px, 100px, 120px)
 * @param {string} padding_left - Left padding (0, 10px, 20px, 40px, 60px, 80px, 100px)
 * @param {string} padding_right - Right padding (0, 10px, 20px, 40px, 60px, 80px, 100px)
 * @param {string} flex_direction - Flex direction (column, row, column-reverse, row-reverse)
 * @param {string} justify_content - Justify content (flex-start, center, flex-end, space-between, space-around, space-evenly)
 * @param {string} align_items - Align items (flex-start, center, flex-end, stretch, baseline)
 * @param {string} gap - Gap between items (0, 5px, 10px, 15px, 20px, 30px, 40px, 50px, 60px)
 * @param {string} background_color - Background color
 * @param {string} background_image - Background image URL
 * @param {string} overlay_color - Overlay color
 * @param {string} overlay_opacity - Overlay opacity (0.0 to 1.0)
 * @param {string} border_radius - Border radius (0, 5px, 10px, 15px, 20px, 25px, 30px, 40px, 50px) - larger scale for sections
 * @param {string} class - Additional CSS classes
 * @param {string} id - Container ID
 */
#}

<div class="flexible-container {{ class|default('') }}"
     {% if id %}id="{{ id }}"{% endif %}
     style="
     position: relative;
     display: flex;
     width: {{ width|default('100%') }};
     height: {{ height|default('auto') }};
     {% if max_width %}max-width: {{ max_width }};{% endif %}
     margin-top: {{ margin_top|default('0') }};
     margin-bottom: {{ margin_bottom|default('0') }};
     margin-left: {{ margin_left|default('0') }};
     margin-right: {{ margin_right|default('0') }};
     padding-top: {{ padding_top|default('0') }};
     padding-bottom: {{ padding_bottom|default('0') }};
     padding-left: {{ padding_left|default('0') }};
     padding-right: {{ padding_right|default('0') }};
     flex-direction: {{ flex_direction|default('column') }};
     justify-content: {{ justify_content|default('center') }};
     align-items: {{ align_items|default('center') }};
     gap: {{ gap|default('20px') }};
     {% if background_image %}background-image: url('{{ background_image }}'); background-size: cover; background-position: center;{% endif %}
     {% if background_color %}background-color: {{ background_color }};{% endif %}
     {% if border_radius %}border-radius: {{ border_radius }};{% endif %}
     overflow: hidden;
     ">
    
    {# Background overlay #}
    {% if overlay_color %}
    <div class="container-overlay" 
         style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: {{ overlay_color }}; opacity: {{ overlay_opacity|default(0.5) }}; z-index: 1;"></div>
    {% endif %}
    
    {# Content area #}
    <div class="container-content" style="position: relative; z-index: 2; display: flex; flex-direction: inherit; gap: inherit; width: 100%;">
        {{ content|raw }}
    </div>
    
</div>
