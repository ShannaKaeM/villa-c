<div class="carbon-block--{{ block_name }}__card-wrapper" 
     style="margin: {{ layout.grid_gap }} 0; padding: 0;">
    <div class="carbon-block--{{ block_name }}__card" 
         style="border-radius: 12px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <div class="carbon-block--{{ block_name }}__card-image">
            {% if villa.featured_image %}
                <img src="{{ Image(villa.featured_image).src('large') }}" 
                     alt="{{ villa.title }}"
                     class="carbon-block--{{ block_name }}__image">
            {% else %}
                <div class="carbon-block--{{ block_name }}__image-placeholder">
                    <span>No Image</span>
                </div>
            {% endif %}
            
            {# Single amenity tag in top right #}
            {% if villa.amenities and villa.amenities|length > 0 %}
                <div class="carbon-block--{{ block_name }}__amenity-tag" 
                     style="padding: 0.375rem 0.75rem; border-radius: 6px;">
                    {{ (villa.amenities[0].icon ? villa.amenities[0].icon ~ ' ' : '') ~ villa.amenities[0].name }}
                </div>
            {% endif %}
        </div>
        
        <div class="carbon-block--{{ block_name }}__card-content" 
             style="gap: 1rem; padding: 1.5rem;">
            <h3 class="carbon-block--{{ block_name }}__card-title">
                <a href="{{ villa.link }}" class="carbon-block--{{ block_name }}__card-link">
                    {{ villa.title }}
                </a>
            </h3>
            
            {% if villa.excerpt %}
                <p class="carbon-block--{{ block_name }}__card-excerpt">
                    {{ villa.excerpt }}
                </p>
            {% endif %}
            
            {# Property details with icons #}
            <div class="carbon-block--{{ block_name }}__card-specs" 
                 style="gap: 0.5rem;">
                {% if villa.bedrooms %}
                    <div class="carbon-block--{{ block_name }}__spec-tag" 
                         style="padding: 0.25rem 0.5rem; border-radius: 4px;">
                        <i class="fas fa-bed"></i>
                        {{ villa.bedrooms ~ ' bed' ~ (villa.bedrooms != 1 ? 's' : '') }}
                    </div>
                {% endif %}
                {% if villa.bathrooms %}
                    <div class="carbon-block--{{ block_name }}__spec-tag" 
                         style="padding: 0.25rem 0.5rem; border-radius: 4px;">
                        <i class="fas fa-bath"></i>
                        {{ villa.bathrooms ~ ' bath' ~ (villa.bathrooms != 1 ? 's' : '') }}
                    </div>
                {% endif %}
                {% if villa.max_guests %}
                    <div class="carbon-block--{{ block_name }}__spec-tag" 
                         style="padding: 0.25rem 0.5rem; border-radius: 4px;">
                        <i class="fas fa-users"></i>
                        {{ villa.max_guests ~ ' guest' ~ (villa.max_guests != 1 ? 's' : '') }}
                    </div>
                {% endif %}
            </div>
            
            <div class="carbon-block--{{ block_name }}__card-actions">
                <button class="carbon-block--{{ block_name }}__button" 
                        style="width: 100%; padding: 0.75rem 1.5rem; border-radius: 8px;"
                        onclick="window.location.href='{{ villa.link }}'">
                    View Details
                </button>
            </div>
        </div>
    </div>
</div>
